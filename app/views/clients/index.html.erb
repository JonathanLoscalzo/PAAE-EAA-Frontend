<h3>Listado de clientes</h3>

<a class="btn-floating btn-large waves-effect waves-light red" href="/clients/new">
  <i class="material-icons">add</i>
</a>

<table class="striped">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Dni</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.first_name %></td>
        <td><%= client.last_name %></td>
        <td><%= client.dni %></td>
        <td><%= link_to 'Detalles', client_path(client) %></td>
        
        <td><%= link_to 'Eliminar', client_path(client), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

