<%= form_for([@batch.product, @batch]) do |f| %>
  <% if @batch.errors.any? %>
  <div class="card-panel purple lighten-2">
    <h5><%= pluralize(@batch.errors.count, "error") %> prohibited this batch from being saved:</h5>

      <ul class="collection">
      <% @batch.errors.full_messages.each do |msg| %>
        <li class="collection-item"><%= msg %></li>
      <% end %>
      </ul>
  </div>
  <% end %>
  <%= f.text_field :product_id,  hidden: true %>

  <div class="field">
    <%= f.label :detail %><br />
    <%= f.text_field :detail , :required=>true%>
  </div>
  <div class="field">
    <%= f.label :total_units %><br />
    <%= f.number_field :total_units , :required=>true%>
  </div>
  <div class="field">
    <%= f.label :expiration_date %><br />
    <%= f.date_field :expiration_date, :class =>"datepicker", :required=>true, :value=>"2016-05-20" %>
  </div>
  <div class="field">
    <%= f.label :entry_date %><br />
    <%= f.date_field :entry_date, :class =>"datepicker", :required=>true , :value=>"2016-05-20" %>
  </div>
  

  <button class="btn waves-effect waves-light" type="submit" name="action">Crear
    <i class="material-icons right">send</i>
  </button>
<% end %>
