<h1>Listing batches</h1>

<table>
  <tr>
    <th>Detail</th>
    <th>Expiration date</th>
    <th>Entry date</th>
    <th>Product</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @batches.each do |batch| %>
  <tr>
    <td><%= batch.detail %></td>
    <td><%= batch.expiration_date %></td>
    <td><%= batch.entry_date %></td>
    <td><%= batch.product %></td>
    <td><%= link_to 'Show', [batch.product, batch] %></td>
    <td><%= link_to 'Edit', edit_product_batch_path(batch.product, batch) %></td>
    <td><%= link_to 'Destroy', [batch.product, batch], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Batch', new_product_batch_path(params[:product_id]) %>
