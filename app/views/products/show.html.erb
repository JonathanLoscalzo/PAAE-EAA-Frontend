<p id="notice"><%= notice %></p>

<p>
  <strong>Nombre:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Cantidad minima:</strong>
  <%= @product.minimum %>
</p>

<p>
  <strong>Cantidad actual:</strong>
  <%= @product.amount %>
</p>

<br>
<%= link_to 'Edit product', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
<br><br>
<p>
 <strong>Lotes:</strong>
</p>

<table>
  <thead>
    <tr>
      <th>Detalle</th>
      <th>Unidades restantes</th>
      <th>Unidades totales</th>
      <th>Fecha de entrada</th>
      <th>Fecha de vencimiento</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

   <tbody>
    <% @batches.each do |batch| %>
      <tr>
        <td><%= batch.detail %></td>
        <td><%= batch.remaining_units %></td>
        <td><%= batch.total_units %></td>
        <td><%= batch.entry_date %></td>
        <td><%= batch.expiration_date %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>


 <%= link_to 'Agregar lote', new_product_batch_url(@product) %><br><br>

