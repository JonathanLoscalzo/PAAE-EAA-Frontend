<h3> <%= @product.name %></h3>




<h5>Proveedor:  <%= @product.supplier.name %></h5>
<p>
  <strong>Cantidad minima:</strong>
  <%= @product.minimum %>
</p>

<p>
  <strong>Cantidad actual:</strong>
  <%= @product.amount %>
</p>
<br>



<h4>Lotes:</h4>

<a class="btn-floating btn-large waves-effect waves-light red" href=<%= new_product_batch_url(@product) %>>
  <i class="material-icons">add</i>
</a>

<table class="striped">
  <thead>
    <tr>
      <th>Detalle</th>
      <th>Unidades restantes</th>
      <th>Unidades totales</th>
      <th>Fecha de entrada</th>
      <th>Fecha de vencimiento</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

   <tbody>
    <% @batches.each do |batch| %>
      <tr>
        <td><%= batch.detail %></td>
        <td><%= batch.remaining_units %></td>
        <td><%= batch.total_units %></td>
        <td><%= batch.entry_date %></td>
        <td><%= batch.expiration_date %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'Back', products_path, :class =>"btn waves-effect waves-light" %>
<br><br>

 

