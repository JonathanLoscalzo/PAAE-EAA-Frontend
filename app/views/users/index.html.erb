<h3>Listado de usuarios</h3>
<a class="btn-floating btn-large waves-effect waves-light red" href="/users/new">
  <i class="material-icons">add</i>
</a>

<table class="striped">
  <thead>
    <tr>
      <th>Username</th>
      <th>Password</th>
      <th>Rol</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.password %></td>
        <td><%= user.role %></td>
        <td><%= link_to 'Show', user_path(user) %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
